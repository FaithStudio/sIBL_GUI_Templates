		DeleteObj(getMatchingObjectsByClassID("{22C3E8F8-CCEA-11D2-B35B-00105A1E70DE}", Constants.prefix, false));

		// Sky Shaders Deletion.
		DeleteObj(getMatchingObjectsByClassID("{3BE54D86-4FEE-4A0B-9548-8F9AA5052D7A}", Constants.prefix, false));

		// RaySwitch Shaders Deletion.
		DeleteObj(getMatchingObjectsByClassID("{3C06FDFE-4579-4C1C-BAD8-9C7701DDFB3E}", Constants.prefix, false));

