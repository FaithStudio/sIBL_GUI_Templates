function bridgeControlsAndShaders(pass, slot)
{
	AddExpr(pass + "." + Constants.prefix + "_" + slot + "_Color_Boolean_Switch.switch", "1-('" + Constants.prefix + "'." + Constants.controlsTitle + "." + slot + "_Toggle)", true);

	var components = ["red", "green", "blue"];
	for(var i = 0; i < components.length; i++)
	{
		AddExpr(pass + "." + Constants.prefix + "_" + slot + "_Color_Math_Basic.input2." + components[i], Constants.prefix + "." + Constants.controlsTitle + "." + slot + "_Gain", true);
		AddExpr(pass + "." + Constants.prefix + "_" + slot + "_Gamma_Color_Math_Basic.input2." + components[i], Constants.prefix + "." + Constants.controlsTitle + "." + slot + "_Gamma", true);
	}
}

function connectFeedbackToDependencies(feedback, passes)
{
	var pass = passes[0];

	if(Options.createBackground || Options.createLighting || Options.createReflection)
	{
		AddExpr(pass + "." + Constants.prefix + "_Sky.X_angle", "-" + feedback + ".kine.global.rotx", true);
		AddExpr(pass + "." + Constants.prefix + "_Sky.Y_angle", feedback + ".kine.global.roty", true);
		AddExpr(pass + "." + Constants.prefix + "_Sky.Z_angle", "-" + feedback + ".kine.global.rotz", true);
	}

	if(Options.createBackground)
	{
		bridgeControlsAndShaders(pass, "Background");
		AddExpr(pass + "." + Constants.prefix + "_Sky.opaque_alpha", Constants.prefix + "." + Constants.controlsTitle + ".Background_Toggle", true);
	}

	if(Options.createLighting || Options.createReflection)
	{
		var skyDomes = [Constants.prefix + "_Skydome"];
		var slots = ["Lighting"];
		if(Options.useDualSkydomeSetup)
		{
			skyDomes = [Constants.prefix + "_Diffuse_Skydome", Constants.prefix + "_Specular_Skydome"];
			var slots = ["Lighting", "Reflection"];
		}

		for(var i = 0; i < skyDomes.length; i++)
		{
			if(objectExists(skyDomes[i]))
			{
				AddExpr(skyDomes[i] + ".kine.global.rotx", feedback + ".kine.global.rotx", true);
				AddExpr(skyDomes[i] + ".kine.global.roty", feedback + ".kine.global.roty", true);
				AddExpr(skyDomes[i] + ".kine.global.rotz", feedback + ".kine.global.rotz", true);

				switch(skyDomes[i])
				{
					case Constants.prefix + "_Skydome" :
						AddExpr(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_diffuse", Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Toggle", true);
						AddExpr(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_specular", Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Toggle", true);
						RemoveCustomParam(Constants.prefix + "." + Constants.controlsTitle + ".Reflection_Toggle");
						RemoveCustomParam(Constants.prefix + "." + Constants.controlsTitle + ".Reflection_Gamma");
						RemoveCustomParam(Constants.prefix + "." + Constants.controlsTitle + ".Reflection_Gain");
						break;
					case Constants.prefix + "_Diffuse_Skydome" :
						AddExpr(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_diffuse", Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Toggle", true);
						Lock(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_specular", siLockLevelManipulation);
						break;
					case Constants.prefix + "_Specular_Skydome" :
						AddExpr(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_specular", Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Toggle", true);
						Lock(skyDomes[i] + ".light." + Constants.prefix + "_Arnold_Skydome_Light.affect_diffuse", siLockLevelManipulation);
						break;
				}
				var components = ["red", "green", "blue"];
				for(var j = 0; j < components.length; j++)
				{
					AddExpr(skyDomes[i] + ".light." + skyDomes[i]  + "_Color_Math_Basic.input2." + components[j], Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Gain", true);
					AddExpr(skyDomes[i] + ".light." + skyDomes[i]  + "_Gamma_Color_Math_Basic.input2." + components[j], Constants.prefix + "." + Constants.controlsTitle + "." + slots[i] + "_Gamma", true);
				}
			}
		}
	}
}

